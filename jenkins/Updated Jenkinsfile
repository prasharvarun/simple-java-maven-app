pipeline {
    agent any

    tools {
        maven 'Maven 3.9.9' // This should match the name you configured in the Jenkins tool configuration
    }
    
    stages {
        stage('Build') {
            steps {
                script {
                    mvnHome = tool 'Maven 3.9.9'
                }                
                sh '${mvnHome}/bin/mvn -version'
                sh '${mvnHome}/bin/mvn -B -DskipTests clean package'
            }
        }
        stage('Test') {
            steps {
                sh '${mvnHome}/bin/mvn test'
            }
            post {
                always {
                    junit 'target/surefire-reports/*.xml'
                }
            }
        }
        stage('Deliver') {
            steps {
                sh './jenkins/scripts/deliver.sh'
            }
        }
    }
}
